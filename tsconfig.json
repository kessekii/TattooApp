{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "webworker"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".", // If using path aliases
    "paths": {
      "@components/*": [
        "src/components/*"
      ], // Example alias, adjust according to your structure
      "@utils/*": [
        "src/utils/*"
      ],
      "@workers/*": [
        "src/workers/*"
      ],
      
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/min.js"
  ],
  "exclude": [
    "**/*.wasm"
  ],
}